<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MiseaJour">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/line1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/BackBTN"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/angle_left_solid"
                        android:layout_gravity="center|start"
                        app:tint="@color/Primarycolor" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="50dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="150dp"
                            app:cardElevation="0dp"
                            android:elevation="10dp"
                            android:layout_gravity="center"
                            app:strokeWidth="5dp"
                            app:strokeColor="@color/LowGold">
                            <ImageView
                                android:id="@+id/ProfileIMGOutPut"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/profilavatar"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"/>
                        </com.google.android.material.card.MaterialCardView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center|top">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/DeleteIMGBTN"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:cardCornerRadius="30dp"
                                android:elevation="10dp"
                                app:cardBackgroundColor="@color/Primarycolor"
                                android:layout_gravity="center|top"
                                app:cardElevation="0dp">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/xmark_solid"
                                    android:layout_gravity="center"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@id/UpdateImgbtn"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:cardCornerRadius="30dp"
                                android:elevation="10dp"
                                app:cardBackgroundColor="@color/Gold"
                                app:cardElevation="0dp"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/rotate_right_solid"
                                    android:layout_gravity="center"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textSize="18sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/Gray"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="80dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textSize="14sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/Gray"
                            android:fontFamily="@font/poppins_medium"/>
                        <EditText
                            android:id="@+id/ClientFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter your full name"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/SecondTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPersonName"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="14sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/Gray"
                            android:fontFamily="@font/poppins_medium"/>
                        <EditText
                            android:id="@+id/ClientPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter your phone number"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/SecondTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="phone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="14sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/Gray"
                            android:fontFamily="@font/poppins_medium"/>
                        <TextView
                            android:id="@+id/ClientEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="zineeddine@email.com"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/SecondTextColor"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/UpdateProfilBTN"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/Primarycolor"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Update My Profil"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>